@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav d-flex justify-content-center align-items-center gap-5">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item fs-5 text-black">
            <a id="manage" class="nav-link fs-5 text-black" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-link fs-5 text-black">
            <form id="logoutForm" class="form-inline d-flex justify-content-center align-items-center gap-5" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link fs-5 text-black">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link fs-5 text-black" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link fs-5 text-black" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
